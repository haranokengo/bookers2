<%= flash[:notice] %>

<div class="col-lg-4">
<div class="profile-container">
  <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
  <h3>name</h3>
  <h3 class="profile-name"><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3 class="profile-introduction"><%= @user.introduction %></h3>
    <%= link_to  edit_user_path(@user) do %>
      <button class="btn btn-secondary btn-lg" ></button>
    <% end %>
  <% end %>
</div>

<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>
<div class="col-lg-8">
  <div class="container">
    <div class="row">
      <h1>Books</h1>
      <table class="table table-striped">
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
        <% @user.books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
