<h1>Books</h1>
<% @user.books.each do |book| %>
  <p><%= image_tag('sample-author1.jpg') %></p>
  <p>title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <p>opinion</p>
  <p><%= book.body %></p>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>