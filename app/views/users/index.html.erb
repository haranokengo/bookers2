<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <table class="table">
        <tr>
          <th><%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></th>
        </tr>
        <% if @user.id == current_user.id %>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
       </tr>
      </table>
        <%= link_to  edit_user_path(@user) do %>
          <button type="button" class="btn-outline-secondary col-6 mx-auto" ></button>
        <% end %>
        <% end %>
      <div>
        <h1>New book</h1>
        <%= form_with model: @book, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'show', user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>