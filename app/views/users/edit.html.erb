<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
      <label for="inputname">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
      <label for="inputImage">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "Image" %>
      <lavel for="inputIntroduction">Introduction</lavel>
      <%= f.text_area :introduction,placeholder: "Introduction" %>
      <%= f.submit "Update user" %>
      <% end %>
    </div>
  </div>
</div>