<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <tr>
    <th></th>
    <th>title</th>
    <th>opinion</th>
  </tr>
  <tr>
    <td></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
</table>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>