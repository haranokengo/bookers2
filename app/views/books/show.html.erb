<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <table class="table">
        <tr>
          <th>
            <%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
          </th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>
      <%= link_to  edit_user_path(@book.user) do %>
        <button type="button" class="btn-outline-secondary mx-auto" >
          <i class="fas fa-user-cog"></i>
        </button>
      <% end %>
      <div>
        <h1>New book</h1>
        <%= form_with model: @book_new, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
 　　<div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
            <%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <button type="button" class="btn btn-success">
              <%= link_to 'Edit', edit_book_path(@book.id),class:"text-white" %>
            </buuton>
          </td>
          <td>
            <button type="button" class="btn btn-danger">
              <%= link_to "Destroy", book_path(@book.id),class:"text-white", method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </button>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>