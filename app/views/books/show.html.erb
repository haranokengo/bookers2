<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>User info</h1>
      <table class="table table-striped">
        <tr>
          <th>
            <%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>

        </tr>
      <% if @book.user.id == current_user.id %>
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>
      <%= link_to  edit_user_path(@book.user) do %>
        <button class="btn btn-secondary btn-lg" ></button>
      <% end %>
      <% end %>
      <div>
        <h1>New book</h1>
        <%= form_with model: @book_new, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
 　　<div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>