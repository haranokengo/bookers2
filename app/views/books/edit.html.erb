<div class="container">
  <div class="row">
    <div class="col-md-8 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <%= form_with model:@book, local:true do |f| %>
      <h4>title</h4>
        <%= f.text_field :title %>
      <h4>opinion</h4>
        <%= f.text_area :body %>
      <div>
        <%= f.submit 'Update Book' %>
      </div>
      <% end %>


      <%= link_to 'Show', book_path %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>
