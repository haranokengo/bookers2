<div class="container">
  <div class="row">
    <div class="col-md-8 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      　<% if @book.errors.any? %>
      　   <div class="error_explanation">
      　　    <%= @book.errors.count %>件のerrorが発生しました
      　     <% @book.errors.full_messages.each do |message| %>
      　　    　<%= message %>
      　     <% end %>
      　   </div>
      　<% end %>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="text1">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <lavel for="textarea">Opinion</lavel>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn-success btn" %>
      </div>
      <% end %>


      <%= link_to 'Show', book_path %>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>

<div class="footer-text">
      <p>CopyRight Infratop.inc</p>
</div>
